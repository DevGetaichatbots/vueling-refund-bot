entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["gitFull", "playwright-driver", "chromium", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXrandr", "xorg.libXext", "xorg.libXfixes", "xorg.libXrender", "xorg.libxcb", "xorg.libXi", "xorg.libXtst", "xorg.libXScrnSaver", "nss", "nspr", "alsa-lib", "cups", "at-spi2-atk", "pango", "mesa", "dbus", "expat", "libdrm", "gtk3", "glib"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Vueling Bot"

[[workflows.workflow]]
name = "Vueling Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --headless"

[workflows.workflow.metadata]
outputType = "console"
